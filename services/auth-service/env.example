# Server Configuration
NODE_ENV=development
PORT=3001
APP_NAME=Auth Service

# Database Configuration (Shared Auth Database)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
DB_DATABASE=ma_sms_auth
DB_SYNCHRONIZE=true
DB_LOGGING=true

# JWT Configuration
# IMPORTANT: Change these secrets in production!
JWT_SECRET=dev-jwt-secret-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=dev-refresh-secret-key-change-in-production-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_TTL=900
RATE_LIMIT_MAX=5

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
